# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                     WealthLog Configuration File                              ║
# ║                    Environment and deployment settings                        ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

# ================================================================================
# DATABASE CONFIGURATION
# ================================================================================
# PostgreSQL connection settings
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="wealthlog"
DB_USERNAME="wealthlog_user"
DB_PASSWORD="your_secure_password"

# Full database URL (auto-generated from above, or override)
DATABASE_URL="postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public"

# ================================================================================
# DEVELOPMENT SETTINGS
# ================================================================================
# Local development ports
DEV_BACKEND_PORT="5000"
DEV_FRONTEND_PORT="3000"
DEV_STUDIO_PORT="5555"

# Development environment
NODE_ENV="development"

# ================================================================================
# AUTHENTICATION & SECURITY
# ================================================================================
# JWT Secrets (auto-generated if empty)
JWT_ACCESS_SECRET=""
JWT_REFRESH_SECRET=""

# JWT Token expiry times
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Session and general secrets
SESSION_SECRET=""
SECRET_KEY=""

# CORS Settings
CORS_ORIGIN="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# ================================================================================
# PRODUCTION SETTINGS
# ================================================================================
# Production URLs
PROD_BACKEND_URL="https://wealthlog-backend-hx43.onrender.com"
PROD_FRONTEND_URL="https://wealthlogs.com"

# Production environment
PROD_NODE_ENV="production"

# ================================================================================
# GOOGLE OAUTH (Optional)
# ================================================================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:5000/api/auth/google/callback"

# ================================================================================
# EMAIL SERVICE (Optional)
# ================================================================================
EMAIL_HOST=""
EMAIL_PORT="587"
EMAIL_USER=""
EMAIL_PASS=""
EMAIL_FROM="noreply@wealthlogs.com"

# ================================================================================
# REDIS CACHE (Optional)
# ================================================================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# ================================================================================
# TESTING
# ================================================================================
# Test user credentials
TEST_USERNAME="testuser"
TEST_PASSWORD="testpass123"

# ================================================================================
# MOBILE APP
# ================================================================================
# Capacitor settings
MOBILE_APP_ID="com.wealthlogs.app"
MOBILE_APP_NAME="WealthLogs"

# ================================================================================
# MONITORING & LOGGING
# ================================================================================
# Log levels: error, warn, info, debug
LOG_LEVEL="info"
LOG_DIR=".maintain-logs"

# ================================================================================
# FEATURE FLAGS
# ================================================================================
ENABLE_REDIS="false"
ENABLE_EMAIL="false"
ENABLE_RATE_LIMITING="true"
ENABLE_API_DOCS="true"

# ================================================================================
# CUSTOM PATHS (Optional - override defaults)
# ================================================================================
# Uncomment to use custom paths
# CUSTOM_BACKEND_DIR="/path/to/backend"
# CUSTOM_FRONTEND_DIR="/path/to/frontend"
# CUSTOM_SHARED_DIR="/path/to/shared"
# CUSTOM_MOBILE_DIR="/path/to/mobile"

# ================================================================================
# BUILD SETTINGS
# ================================================================================
# Node.js version requirements
NODE_VERSION_REQUIRED="18.0.0"
NPM_VERSION_REQUIRED="9.0.0"

# Build optimization
ANALYZE_BUNDLE="false"
MINIMIZE_BUILD="true"

# ================================================================================
# DEPLOYMENT
# ================================================================================
# GitHub repository (for CI/CD)
GITHUB_REPO="yourusername/wealthlogs"

# Deployment branches
DEPLOY_BRANCH_PROD="master"
DEPLOY_BRANCH_STAGING="staging"

# ================================================================================
# END OF CONFIGURATION
# ================================================================================
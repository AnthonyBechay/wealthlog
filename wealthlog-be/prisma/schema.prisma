generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id           Int    @id @default(autoincrement())
  username     String @unique
  password     String
  role         String
  accountBalance Float @default(0)
  trades       Trade[]
  settings     Settings?
}

model Trade {
  id         Int      @id @default(autoincrement())
  instrument String
  session    String
  percentage Float?
  amount     Float?
  fees       Float    @default(0)  //  Default value added
  dateTime   DateTime @default(now())
  pattern    String
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}


model Settings {
  id          Int    @id @default(autoincrement())
  userId      Int    @unique
  user        User   @relation(fields: [userId], references: [id])
  instruments Json  
  patterns    Json  
  beMin       Float  @default(-0.2)
  beMax       Float  @default(0.3)
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     String
  trades   Trade[]
}

model Trade {
  id         Int      @id @default(autoincrement())
  instrument String
  session    String   // Auto-detected (London/US/Other)
  outcome    String   // Profit, Loss, BE
  amount     Float
  dateTime   DateTime @default(now()) // Store time of trade
  pattern    String   // Trade pattern (set via settings)
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}
